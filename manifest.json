{
  "name": "ghcss",
  "description": "Custom Github Profile CSS",
  "version": "1.0",
  "manifest_version": 3,
  "action": {
    "default_popup": "src/popup.html",
    "default_icon": "icons/512.png"
  },
  "permissions": [
    "activeTab",
    "tabs",
    "storage"
  ],
  "host_permissions": [
    "*://*.ghcss.bims.sh/*"
  ],
  "background": {
    "service_worker": "src/scripts/background.js"
  },
  "content_scripts": [
    {
      "matches": ["*://*.github.com/*"],
      "js": ["src/scripts/ghcss.js"],
      "run_at": "document_idle"
    }
  ]
}
